<UserControl x:Class="MiddleBooth.Views.PaymentOptionsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:MiddleBooth.Views">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Select Payment Method" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="MediumSeaGreen" 
                       Margin="0,0,0,30"/>

            <Button Content="QRIS Payment" 
                    Command="{Binding QrisPaymentCommand}" 
                    Style="{StaticResource LargeButtonStyle}" 
                    Width="300" Height="100" 
                    Margin="0,20"/>

            <Button Content="Voucher Payment" 
                    Command="{Binding VoucherPaymentCommand}" 
                    Style="{StaticResource LargeButtonStyle}" 
                    Width="300" Height="100" 
                    Margin="0,20"/>

            <Button Content="Back" 
                    Command="{Binding BackCommand}" 
                    Style="{StaticResource LargeButtonStyle}" 
                    Width="200" Height="50" 
                    Margin="0,30"/>
        </StackPanel>
    </Grid>
</UserControl>
