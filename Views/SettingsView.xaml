<UserControl x:Class="MiddleBooth.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:MiddleBooth.Views">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Pengaturan" 
                   FontSize="36" 
                   FontWeight="Bold" 
                   Foreground="MediumSeaGreen" 
                   HorizontalAlignment="Center"
                   Margin="0,30,0,20"/>

        <!-- Notification Area -->
        <Border Grid.Row="1" 
                Background="LightGreen" 
                Visibility="{Binding IsNotificationVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                Padding="10" 
                Margin="0,0,0,20">
            <TextBlock Text="{Binding NotificationMessage}" 
                       FontSize="18" 
                       Foreground="DarkGreen" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,0">
                <!-- DSLR Booth Path -->
                <TextBlock Text="DSLR Booth Path" FontSize="18" Margin="0,20,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Text="{Binding DSLRBoothPath}" 
                             FontSize="16" 
                             Padding="10" 
                             Margin="0,0,10,0"/>
                    <Button Grid.Column="1" Content="Pilih" 
                            Command="{Binding BrowseDSLRBoothPathCommand}" 
                            Style="{StaticResource LargeButtonStyle}" 
                            Width="100" 
                            Height="40"/>
                </Grid>

                <!-- Payment Gateway URL -->
                <TextBlock Text="Payment Gateway URL" FontSize="18" Margin="0,20,0,5"/>
                <TextBox Text="{Binding PaymentGatewayUrl}" 
                         FontSize="16" 
                         Padding="10"/>

                <!-- Service Price -->
                <TextBlock Text="Harga Layanan" FontSize="18" Margin="0,20,0,5"/>
                <TextBox Text="{Binding ServicePrice}" 
                         FontSize="16" 
                         Padding="10"/>

                <!-- Application PIN -->
                <TextBlock Text="PIN Aplikasi" FontSize="18" Margin="0,20,0,5"/>
                <PasswordBox PasswordChanged="PasswordBox_PasswordChanged"
                             FontSize="16" 
                             Padding="10"/>

                <!-- Midtrans Server Key -->
                <TextBlock Text="Midtrans Server Key" FontSize="18" Margin="0,20,0,5"/>
                <TextBox Text="{Binding MidtransServerKey}" 
                         FontSize="16" 
                         Padding="10"/>

                <!-- Production Mode -->
                <CheckBox Content="Mode Produksi" 
                          IsChecked="{Binding IsProduction}" 
                          FontSize="18" 
                          Margin="0,20,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Grid Grid.Row="3" Background="WhiteSmoke">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,30">
                <Button Command="{Binding SaveSettingsCommand}" 
                        Content="Simpan" 
                        Style="{StaticResource LargeButtonStyle}" 
                        Background="MediumSeaGreen" 
                        Width="150" 
                        Height="50" 
                        Margin="0,0,20,0"/>

                <Button Command="{Binding BackCommand}" 
                        Content="Kembali" 
                        Style="{StaticResource LargeButtonStyle}" 
                        Background="Tomato" 
                        Width="150" 
                        Height="50"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>