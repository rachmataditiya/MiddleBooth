<UserControl x:Class="MiddleBooth.Views.QrisPaymentPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:MiddleBooth.Views">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Pembayaran QRIS" 
                   FontSize="32" 
                   FontWeight="Bold" 
                   Foreground="MediumSeaGreen" 
                   HorizontalAlignment="Center"
                   Margin="0,20,0,10"/>

        <!-- Status Area (Poni) -->
        <Border Grid.Row="1" 
                Background="LightGray"
                BorderBrush="DarkGray"
                BorderThickness="0,0,0,1"
                Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Status: " 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="DarkSlateGray" 
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding PaymentStatus}" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="{Binding PaymentStatusColor}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- QR Code Area -->
        <Border Grid.Row="2" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                CornerRadius="10" 
                Padding="20" 
                Margin="20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Scan QRIS untuk Membayar" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="DarkSlateGray" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>
                <Image Source="{Binding QrCodeImageSource}" 
                       Width="250" 
                       Height="250" 
                       Stretch="Uniform"/>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <Button Grid.Row="3" 
                Content="Kembali" 
                Command="{Binding BackCommand}" 
                Style="{StaticResource LargeButtonStyle}" 
                Width="200" 
                Height="50" 
                Margin="0,10,0,20"/>
    </Grid>
</UserControl>