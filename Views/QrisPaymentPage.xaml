<UserControl x:Class="MiddleBooth.Views.QrisPaymentPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:MiddleBooth.Views">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Scan the QR Code to Pay" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="MediumSeaGreen" 
                       Margin="0,0,0,20"/>

            <Image Source="{Binding QrCodeImageSource}" Width="200" Height="200" Margin="0,0,0,20"/>

            <TextBlock Text="{Binding PaymentStatus}" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="DarkGray" 
                       Margin="0,20"/>

            <Button Content="Back to Main Page" 
                    Command="{Binding BackCommand}" 
                    Style="{StaticResource LargeButtonStyle}" 
                    Width="200" Height="50" Margin="0,30,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
