<UserControl x:Class="MiddleBooth.Views.VoucherPaymentPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:MiddleBooth.Views">
    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Enter Voucher Code" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="MediumSeaGreen" 
                       Margin="0,0,0,20"/>

            <TextBox Text="{Binding VoucherCode}" 
                     FontSize="18" 
                     Width="250" 
                     Margin="0,0,0,20"/>

            <Button Content="Validate Voucher" 
                    Command="{Binding ValidateVoucherCommand}" 
                    Style="{StaticResource LargeButtonStyle}" 
                    Width="200" Height="50" Margin="0,20"/>

            <TextBlock Text="{Binding ValidationResult}" 
                       FontSize="20" 
                       Foreground="DarkGray" 
                       Margin="0,20"/>

            <Button Content="Back to Payment Options" 
                    Command="{Binding BackCommand}" 
                    Style="{StaticResource LargeButtonStyle}" 
                    Width="200" Height="50" Margin="0,30"/>
        </StackPanel>
    </Grid>
</UserControl>
